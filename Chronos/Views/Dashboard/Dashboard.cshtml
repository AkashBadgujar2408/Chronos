
@{
    ViewBag.Title = "Dashboard";
}

<div class="row mb-4 g-4">
    <!-- Total Projects -->
    <div class="col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-1">Total Projects</p>
                    <h3 class="card-title mb-1">24</h3>
                    <p class="text-success small mb-0"><i class="fas fa-arrow-up me-1"></i>12% from last month</p>
                </div>
                <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: #d1d3e2;">
                    <i class="fas fa-diagram-project text-primary fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Tasks -->
    <div class="col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-1">Active Tasks</p>
                    <h3 class="card-title mb-1">156</h3>
                    <p class="text-danger small mb-0"><i class="fas fa-arrow-down me-1"></i>5% from last week</p>
                </div>
                <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: #d1e7dd;">
                    <i class="fas fa-tasks text-success fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Members -->
    <div class="col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-1">Team Members</p>
                    <h3 class="card-title mb-1">42</h3>
                    <p class="text-success small mb-0"><i class="fas fa-arrow-up me-1"></i>3 new this week</p>
                </div>
                <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: #cfe2ff;">
                    <i class="fas fa-users text-info fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Overdue Tasks -->
    <div class="col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-1">Overdue Tasks</p>
                    <h3 class="card-title mb-1">8</h3>
                    <p class="text-warning small mb-0"><i class="fas fa-exclamation-triangle me-1"></i>Needs attention</p>
                </div>
                <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: #fff3cd;">
                    <i class="fas fa-clock text-warning fs-5"></i>
                </div>
            </div>
        </div>
    </div>
</div>
