@model SignInRequest

@{
    ViewBag.Title = "SignIn User";
}

<div class="d-flex justify-content-center">
    <h1>Chronos</h1>
</div>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Sign In</h3>
            <form role="form" asp-controller="Accounts" asp-action="SignIn">
                <div class="mb-3">
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
                <p class="text-center text-muted mt-3 mb-0">Don't have an account? <a asp-controller="Accounts" asp-action="Register" class="text-primary fw-bold">Register</a></p>
            </form>
        </div>
    </div>
</div>
