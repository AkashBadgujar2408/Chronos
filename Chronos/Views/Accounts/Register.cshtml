@model RegisterRequest

@{
    ViewBag.Title = "Register User";
}

<div class="d-flex justify-content-center">
    <h1>Chronos</h1>
</div>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Register</h3>
            <form role="form" asp-controller="Accounts" asp-action="Register">
                <div class="mb-3">
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="AreTermsNConditionsAccepted">
                    <label class="form-check-label" asp-for="AreTermsNConditionsAccepted">
                        I agree to the <a href="javascript:;" class="text-primary" data-bs-toggle="modal" data-bs-target="#termsnConditionsModal">Terms and Conditions</a>
                    </label>
                    <div>
                        <span asp-validation-for="AreTermsNConditionsAccepted" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Sign up</button>
                </div>
                <p class="text-center text-muted mt-3 mb-0">Already have an account? <a href="#" class="text-primary fw-bold">Sign in</a></p>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="termsnConditionsModal" tabindex="-1" aria-labelledby="termsnConditionsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="termsnConditionsLabel">Terms and Conditions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Welcome to Chronos</strong></p>
                <p>By accessing or using our service, you agree to be bound by these terms. If you disagree with any part of the terms, then you may not access the service.</p>

                <h6>1. Use of the Service</h6>
                <p>You agree not to misuse the service or help anyone else to do so.</p>

                <h6>2. Privacy Policy</h6>
                <p>Your privacy is important to us. Please review our Privacy Policy for details on how we collect and use personal information.</p>

                <h6>3. Changes to Terms</h6>
                <p>We reserve the right to modify or replace these Terms at any time. It is your responsibility to check the Terms periodically for changes.</p>

                <h6>4. Contact Us</h6>
                <p>If you have any questions about these Terms, please contact us.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

